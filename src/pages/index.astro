---
import BaseLayout from '../layouts/BaseLayout.astro';
import GPUCard from '../components/GPUCard.astro';
import { gpus, getTopComparisons } from '../data/gpus';

const topGPUs = gpus.filter(g => ['nvidia-rtx-5090', 'nvidia-rtx-5070', 'amd-rx-9070-xt', 'intel-arc-b580', 'nvidia-rtx-5080', 'amd-rx-9060-xt'].includes(g.slug));
const topComparisons = getTopComparisons().slice(0, 6);

const schema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "GraphicCards.com",
  "url": "https://graphiccards.com",
  "description": "The definitive resource for graphics cards. Reviews, benchmarks, comparisons, and buying guides for NVIDIA, AMD, and Intel GPUs.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://graphiccards.com/gpus?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<BaseLayout
  title="GraphicCards.com — Graphics Card Reviews, Benchmarks & Comparisons (2026)"
  description="The definitive resource for graphics cards. Expert reviews, detailed benchmarks, head-to-head comparisons, and buying guides for NVIDIA, AMD, and Intel GPUs in 2026."
  canonical="/"
  schema={schema}
  noHeader={true}
>
  <!-- ═══════ CUSTOM NAV FOR HOMEPAGE ═══════ -->
  <nav id="navbar-home" class="fixed top-0 left-0 right-0 z-50 transition-all duration-400">
    <div class="max-w-7xl mx-auto px-6 flex items-center justify-between h-16">
      <a href="/" class="font-display font-bold text-xl tracking-tight">
        <span class="gradient-text">Graphic</span><span class="text-gray-400">Cards</span><span class="text-gray-600">.com</span>
      </a>
      <div class="hidden md:flex items-center gap-8">
        <a href="/best-graphics-cards" class="text-sm text-gray-400 hover:text-white transition-colors font-medium">Best GPUs</a>
        <a href="/gpus" class="text-sm text-gray-400 hover:text-white transition-colors font-medium">All GPUs</a>
        <a href="/compare" class="text-sm text-gray-400 hover:text-white transition-colors font-medium">Compare</a>
        <a href="#inquire" class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-accent-indigo to-accent-purple text-white text-sm font-semibold rounded-full transition-all hover:-translate-y-0.5 hover:shadow-lg hover:shadow-accent-indigo/30">
          Domain For Sale
        </a>
      </div>
    </div>
  </nav>

  <!-- ═══════ HERO ═══════ -->
  <section class="relative min-h-[70vh] flex items-center pt-24 pb-16 overflow-hidden">
    <!-- Glow orbs -->
    <div class="absolute -top-32 -left-24 w-[500px] h-[500px] bg-accent-indigo/10 rounded-full blur-[120px] pointer-events-none animate-pulse"></div>
    <div class="absolute top-1/2 -right-32 w-[400px] h-[400px] bg-accent-purple/10 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-6 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/[0.03] border border-white/[0.06] rounded-full text-sm text-gray-400 mb-8">
        <span class="w-2 h-2 bg-accent-emerald rounded-full animate-pulse"></span>
        Updated for 2026 — RTX 50 &amp; RX 9000 Series Covered
      </div>

      <h1 class="font-display font-extrabold text-5xl md:text-7xl lg:text-8xl tracking-tighter leading-none mb-6">
        <span class="gradient-text">Graphic Cards</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
        Expert reviews, detailed benchmarks, and head-to-head comparisons for every <strong class="text-white">NVIDIA</strong>, <strong class="text-white">AMD</strong>, and <strong class="text-white">Intel</strong> GPU.
      </p>

      <div class="flex flex-wrap gap-4 justify-center mb-16">
        <a href="/best-graphics-cards" class="btn-primary">
          Best Graphics Cards 2026
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/compare" class="btn-secondary">
          Compare GPUs
        </a>
      </div>

      <!-- Quick stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-px bg-white/[0.06] rounded-2xl overflow-hidden max-w-3xl mx-auto">
        <div class="bg-bg-secondary p-6 text-center">
          <div class="font-display font-bold text-2xl text-white">{gpus.length}+</div>
          <div class="text-xs text-gray-500 mt-1">GPUs Reviewed</div>
        </div>
        <div class="bg-bg-secondary p-6 text-center">
          <div class="font-display font-bold text-2xl text-white">3</div>
          <div class="text-xs text-gray-500 mt-1">Brands Covered</div>
        </div>
        <div class="bg-bg-secondary p-6 text-center">
          <div class="font-display font-bold text-2xl text-white">{getTopComparisons().length}+</div>
          <div class="text-xs text-gray-500 mt-1">Comparisons</div>
        </div>
        <div class="bg-bg-secondary p-6 text-center">
          <div class="font-display font-bold text-2xl text-white">2026</div>
          <div class="text-xs text-gray-500 mt-1">Latest Data</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══════ FEATURED GPUS ═══════ -->
  <section class="py-20 border-t border-white/5">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-end justify-between mb-12">
        <div>
          <div class="section-label">Featured</div>
          <h2 class="font-display font-bold text-3xl md:text-4xl tracking-tight">Top Graphics Cards in 2026</h2>
        </div>
        <a href="/gpus" class="hidden md:inline-flex items-center gap-2 text-sm text-accent-indigo hover:text-accent-cyan transition-colors font-medium">
          View All GPUs
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {topGPUs.map(gpu => <GPUCard gpu={gpu} />)}
      </div>

      <div class="mt-8 text-center md:hidden">
        <a href="/gpus" class="btn-secondary text-sm">View All GPUs</a>
      </div>
    </div>
  </section>

  <!-- ═══════ POPULAR COMPARISONS ═══════ -->
  <section class="py-20 bg-bg-secondary border-t border-b border-white/5">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <div class="section-label justify-center">Head to Head</div>
        <h2 class="font-display font-bold text-3xl md:text-4xl tracking-tight">Popular GPU Comparisons</h2>
        <p class="text-gray-400 mt-4 max-w-lg mx-auto">Side-by-side spec sheets, benchmark data, and our verdict on the most searched GPU matchups of 2026.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {topComparisons.map(comp => (
          <a href={`/compare/${comp.slug}`} class="card p-6 group block">
            <div class="flex items-center justify-between mb-4">
              <span class="text-xs font-bold uppercase tracking-wider px-2.5 py-1 rounded-full" style={`background: ${comp.gpu1.brand === 'NVIDIA' ? '#76b90020' : comp.gpu1.brand === 'AMD' ? '#ed1c2420' : '#0071c520'}; color: ${comp.gpu1.brand === 'NVIDIA' ? '#76b900' : comp.gpu1.brand === 'AMD' ? '#ed1c24' : '#0071c5'};`}>
                {comp.gpu1.brand}
              </span>
              <span class="text-gray-600 font-display font-bold text-sm">VS</span>
              <span class="text-xs font-bold uppercase tracking-wider px-2.5 py-1 rounded-full" style={`background: ${comp.gpu2.brand === 'NVIDIA' ? '#76b90020' : comp.gpu2.brand === 'AMD' ? '#ed1c2420' : '#0071c520'}; color: ${comp.gpu2.brand === 'NVIDIA' ? '#76b900' : comp.gpu2.brand === 'AMD' ? '#ed1c24' : '#0071c5'};`}>
                {comp.gpu2.brand}
              </span>
            </div>

            <h3 class="font-display font-semibold text-white text-center mb-4 group-hover:text-accent-indigo transition-colors">
              {comp.gpu1.name.replace(/NVIDIA |AMD |Intel /, '')}
              <span class="text-gray-600 mx-2">vs</span>
              {comp.gpu2.name.replace(/NVIDIA |AMD |Intel /, '')}
            </h3>

            <div class="flex justify-between text-sm text-gray-500">
              <span>{comp.gpu1.vram}GB &middot; ${comp.gpu1.currentPrice}</span>
              <span>{comp.gpu2.vram}GB &middot; ${comp.gpu2.currentPrice}</span>
            </div>

            <div class="mt-4 pt-4 border-t border-white/5 text-center">
              <span class="text-xs text-accent-indigo font-medium group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                Compare Now
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </span>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-10 text-center">
        <a href="/compare" class="btn-secondary text-sm">View All Comparisons</a>
      </div>
    </div>
  </section>

  <!-- ═══════ DOMAIN FOR SALE BANNER ═══════ -->
  <section id="inquire" class="py-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="relative rounded-3xl overflow-hidden p-12 md:p-16 text-center" style="background: linear-gradient(135deg, rgba(99,102,241,0.08), rgba(139,92,246,0.08), rgba(6,182,212,0.05));">
        <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-accent-indigo to-transparent"></div>

        <div class="inline-flex items-center gap-2 px-4 py-1.5 bg-yellow-500/10 border border-yellow-500/20 rounded-full text-yellow-500 text-xs font-semibold uppercase tracking-wider mb-6">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          Premium Domain For Sale
        </div>

        <h2 class="font-display font-bold text-3xl md:text-5xl tracking-tight mb-4">
          <span class="gradient-text">GraphicCards.com</span> is Available
        </h2>
        <p class="text-gray-400 text-lg max-w-xl mx-auto mb-8 leading-relaxed">
          Own the definitive domain in the $100B+ graphics card industry. 1.5M+ monthly searches. Exact-match .COM. Serious inquiries only.
        </p>

        <div class="flex flex-wrap gap-4 justify-center">
          <a href="mailto:hovik@memes.com?subject=GraphicCards.com%20Inquiry" class="btn-primary">
            <span>Inquire Now</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
          </a>
          <a href="/domain-for-sale" class="btn-secondary">
            View Market Data
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    const nav = document.getElementById('navbar-home');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 60) {
        nav?.classList.add('bg-bg-primary/80', 'backdrop-blur-xl', 'border-b', 'border-white/5');
      } else {
        nav?.classList.remove('bg-bg-primary/80', 'backdrop-blur-xl', 'border-b', 'border-white/5');
      }
    });
  </script>
</BaseLayout>
